{
  $schema: "https://docs.renovatebot.com/renovate-schema.json",
  extends: [
    "config:recommended",
    "docker:enableMajor",
    "docker:pinDigests",
    "helpers:pinGitHubActionDigests",
    ":automergeBranch",
    ":automergeDigest",
    ":automergePatch",
    ":dependencyDashboard",
    ":disableRateLimiting",
    ":rebaseStalePrs",
    ":semanticCommits",
    ":timezone(Europe/Warsaw)",
    "github>ajgon/home-test//.github/renovate/autoMerge.json5",
    "github>ajgon/home-test//.github/renovate/customManagers.json5",
    "github>ajgon/home-test//.github/renovate/labels.json5",
    "github>ajgon/home-test//.github/renovate/semanticCommits.json5",
  ],
  dependencyDashboardTitle: "Renovate Dashboard ðŸ¤–",
  suppressNotifications: ["prEditedNotification", "prIgnoreNotification"],
  ignorePaths: ["**/*.sops.*", "kubernetes/**/*.tmpl.*"],
  "helm-values": {
    fileMatch: ["(^|/)kubernetes/.+/values.*\\.ya?ml$"],
  },
  kubernetes: {
    fileMatch: ["(^|/)kubernetes/.+\\.ya?ml$"],
  },
  nix: {
    enabled: true,
    fileMatch: ["flake\\.nix$"],
  },
  lockFileMaintenance: {
    enabled: true,
    automerge: true,
  },
}
